{
    "name": "@contentstack/live-preview-utils",
    "version": "3.0.0",
    "description": "Contentstack provides the Live Preview SDK to establish a communication channel between the various Contentstack SDKs and your website, transmitting  live changes to the preview pane.",
    "type": "module",
    "types": "dist/legacy/index.d.ts",
    "main": "dist/legacy/index.cjs",
    "module": "dist/legacy/index.js",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/modern/index.d.ts",
                "default": "./dist/modern/index.js"
            },
            "require": {
                "types": "./dist/modern/index.d.cts",
                "default": "./dist/modern/index.cjs"
            }
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "build": "rimraf dist && tsup",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "jest --watch",
        "test:coverage": "jest src --coverage --watchAll --coverageDirectory=\"coverage\"",
        "dev": "tsup --watch",
        "prepare": "npm run build && husky install",
        "lint": "eslint src",
        "lint:fix": "eslint --fix",
        "prettier": "prettier src --check",
        "prettier:fix": "prettier src --write",
        "format": "npm run prettier:fix && npm run lint:fix",
        "docs": "typedoc --out docs --entryPointStrategy expand ./src"
    },
    "keywords": [
        "live-preview"
    ],
    "author": "Contentstack",
    "license": "MIT",
    "devDependencies": {
        "@contentstack/advanced-post-message": "github:contentstack/adv-post-message#main",
        "@eslint/js": "^9.10.0",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/preact": "^3.2.3",
        "@testing-library/user-event": "^14.5.2",
        "@types/jest": "^27.0.1",
        "@types/jsdom": "^21.1.6",
        "@types/lodash-es": "^4.17.12",
        "@types/mustache": "^4.2.2",
        "@types/react": "^18.2.57",
        "@types/react-dom": "^18.2.19",
        "@types/uuid": "^8.3.1",
        "esbuild-plugin-file-path-extensions": "^2.1.0",
        "eslint": "^7.32.0",
        "eslint-plugin-react": "^7.36.0",
        "globals": "^15.9.0",
        "husky": "^8.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-fetch-mock": "^3.0.3",
        "jsdom": "^23.2.0",
        "prettier": "^3.3.3",
        "prettier-eslint": "^15.0.1",
        "rimraf": "^5.0.5",
        "tsup": "^8.0.1",
        "typedoc": "^0.25.13",
        "typescript": "^5.4.5",
        "typescript-eslint": "^8.5.0",
        "vitest": "^2.0.5"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/contentstack/live-preview-sdk.git"
    },
    "dependencies": {
        "@babel/runtime": "^7.23.9",
        "@preact/compat": "^17.1.2",
        "@preact/signals": "^1.2.2",
        "classnames": "^2.5.1",
        "deepsignal": "^1.5.0",
        "goober": "^2.1.14",
        "just-camel-case": "^6.2.0",
        "lodash-es": "^4.17.21",
        "mustache": "^4.2.0",
        "preact": "^10.19.5",
        "react": "npm:@preact/compat",
        "react-dom": "npm:@preact/compat",
        "uuid": "^8.3.2"
    },
    "lint-staged": {
        "src/**/*.{ts,css,md}": [
            "npm run prettier:fix"
        ]
    }
}
